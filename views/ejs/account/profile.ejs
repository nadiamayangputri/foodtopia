    <!--template CSS-->
    <link href="css/template.css" rel="stylesheet">
    <!--Bootstrap-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="../../css/autosearch.css" rel="stylesheet">


</head>
<body>

<header id="navbar">
    <div class="main-header">
        <h1 class="name">Foodtopia</h1>
        <a href="/logout">
            <button type="button" id="login">Log out</button>
        </a>
    </div>

    <div class="nav">
        <ul>
            <li><a href="/">
                    <button type="button" class="home"><img class="nav-icon" src="../icon/home-icon-silhouette.png">
                        <div>Home</div>
                    </button>
                </a></li>

            <li><a href="/lookup">
                    <button type="button" class="lookup"><img class="nav-icon" src="../icon/magnifier.png">
                        <div>Lookup</div>
                    </button>
                </a></li>

            <li><a href="/games">
                    <button type="button" class="games"><img class="nav-icon" src="../icon/gamepad-console.png">
                        <div>Games</div>
                    </button>
                </a></li>
        </ul>
    </div>
</header>


<div class="content">


    <div id="profile">
        <div class="profile-container">
            <img src="../../icon/user.png" class="user-img">
            <h3 class="username"><%= users.username %></h3>
            <ul class="profile-icons">
                <li><img src="../../icon/medal.png" class="icon">Badges</li>
                <li><img src="../../icon/favorite.png" class="icon">Points</li>
                <li><img src="../../icon/journal.png" class="icon">Journal</li>
            </ul>
        </div>
    </div>

    <div id="fact-day">
        <h4 class="fact-heading">Food ingredient of the day: ______</h4>
        <div class="fact-container">
            <img src="../../img/picture.png" class="food-img">

            <div class="fact-desc">
                <p>Category: _____</p>
                <p>Where it comes from: _____</p>
                <div class="benefit">
                    <p>Benefit:</p>
                    <ol class="benefit">
                        <li>_______</li>
                        <li>_______</li>
                        <li>_______</li>
                    </ol>
                </div>
            </div>
        </div>
        <button class="more-btn">Read More</button>
    </div>

    <div id="journal">
        <div class="subheading">
            <h2>My Journal</h2>
        </div>
        <!-- Button trigger modal -->
        <button type="button" class="add-btn" data-toggle="modal" data-target="#add-journal">+</button>

        <!-- Modal for journal -->
        <div class="modal fade" id="add-journal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
             aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content" id="my-modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="my-modal-title">Create Journal Log</h5>
                        <button type="button" class="close" id="my-close-btn" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form id="journalentry" action="/journal" method="post">
                            <div class="container">
                                <label class="form-control-label" for="meal">What did you eat today?</label>
                                <input type="text" class="form-control" name="meal" required>

                                <label class="form-control-label" for="ingredients">What ingredients are in it? (you can
                                    ask others what they think if you are unsure)</label>
                                <input type="text" class="form-control" name="ingredients" required>

                                <label class="form-control-label" for="comments">Comments</label>
                                <textarea type="text" form="journalentry" class="form-control" name="comments" required>
                               </textarea>
                                <label class="form-control-label" for="rating">How much would you rate this
                                    meal?</label>
                                <div class="stars">
                                    <form>
                                        <input class="star star-5" id="star-5" type="radio" name="star"/>
                                        <label class="star star-5" for="star-5"></label>
                                        <input class="star star-4" id="star-4" type="radio" name="star"/>
                                        <label class="star star-4" for="star-4"></label>
                                        <input class="star star-3" id="star-3" type="radio" name="star"/>
                                        <label class="star star-3" for="star-3"></label>
                                        <input class="star star-2" id="star-2" type="radio" name="star"/>
                                        <label class="star star-2" for="star-2"></label>
                                        <input class="star star-1" id="star-1" type="radio" name="star"/>
                                        <label class="star star-1" for="star-1"></label>
                                    </form>
                                </div>
                                <div class="modal-footer">

                                    <button type="submit" class="post-btn" value="addEntry">Post</button>
                                </div>

                            </div>
                        </form>

                    </div>

                </div>
            </div>
        </div>

        <div class="journal-container">
            <div class="result">
                <div class="box">
                    <%= console.log('var journal in profile ejs ' + journals); %>
                    <% if (!journals || journals.length < 1 ) { %>
                        <h3 class="empty">No journal log yet :(</h3>
                    <% } else { %>
                    <% for(var i = 0; i < journals.length; i++) { %>
                    <div class="journal-entry entry-<%= i %>">
                        <h4 class="date">Monday, 24 March</h4>
                        <p>What I ate: <%= journals[i].meal %></p>
                        <p>What it is made of:<%= journals[i].ingredients %> ...</p>
                        <p>Comments:</p>
                        <p> <%= journals[i].comments %></p>
                    </div>
                    <% } %>

                    <% } %>

                </div>

            </div>

        </div>


    </div>
    <div id="collection">
        <div class="subheading">
            <h2>My Collection</h2>
        </div>
        <h3 class="empty">No item added yet :(</h3>
    </div>
</div>

<footer class="footer">
    <p class='copyright'>Copyright of <span class="team-name">Rainbow Rift</span></p>
</footer>

<!-- Sign up Modal -->
<div class="modal fade" id="id01" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">

            <div class="banner-img">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form name="signupform" action="/profile" method="post">

                    <div class="container">
                        <h1 id="banner1"> Join us today!</h1>
                        <div class="form-container">
                            <p id="banner2"> Please fill in this form to create an account.</p>
                            <hr>
                            <% if ( sessionFlash && sessionFlash.message) { %>
                            <div class="<%= sessionFlash.type %>">
                                <strong>FLASH!</strong> <%= sessionFlash.message %>
                            </div>
                            <% } %>
                            <label for="username"><b>Username </b></label>
                            <input type="text" placeholder="Create a username" name="username" required>
                            <br>
                            <label for="password"><b>Password </b></label>
                            <input type="password" placeholder="Your passcode" name="password" required>
                            <br>
                            <label for="passwordConf"><b>Re-enterPassword </b></label>
                            <input type="password" name="passwordConf" placeholder="Confirm Password" required>
                            <br>

                            <div class="modal-footer">
                                <button type="button" id="cancel" data-dismiss="modal">Maybe later...</button>
                                <button type="submit" id="submit_signup" value="REGISTER">Sign Me Up !</button>
                            </div>

                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

<!-- Log in Modal -->
<div class="modal fade" id="id02" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">

            <div class="banner-img">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <form name="loginform" action="/profile" method="post">
                    <div class="container">
                        <h1 id="banner1"> Welcome back!</h1>
                        <hr>
                        <div class="form-container">
                            <label for="username"><b>Username </b></label>
                            <input type="text" placeholder="Your username" name="username" required>
                            <br>
                            <label for="password"><b>Password </b></label>
                            <input type="password" placeholder="Your passcode" name="password" required>
                            <br>
                            <button type="submit" class="signup" id="submit_signup">Log me in !</button>

                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
<script src="../../js/search.js" type="text/javascript"></script>
<!--Bootstrap JS-->
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>
</body>


</html>


